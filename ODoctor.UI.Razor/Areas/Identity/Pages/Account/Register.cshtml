@page
@model RegisterModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Register";
}

<h3 class="h3 font-weight-normal">Welcome to ODoctor</h3>
<p class="mb-0">Please enter all the details</p>
<form class="form-signin mx-auto py-0" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password"></label>
        <input asp-for="Input.Password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.ConfirmPassword"></label>
        <input asp-for="Input.ConfirmPassword" class="form-control" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary btn-block m-0">Register</button>
    <div class="small pt-2">
        By signing up, you agree to <a asp-area="" asp-page="./Terms">Terms</a>
    </div>
</form>
